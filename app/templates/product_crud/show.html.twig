{% extends 'base.html.twig' %}

{% block title %}Product{% endblock %}

{% block body %}
    <h1>Product</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Uuid</th>
                <td>{{ product.uuid }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ product.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ product.description }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ product.price }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ product.image }}</td>
            </tr>
            <tr>
                <th>NbVentes</th>
                <td>{{ product.nbVentes }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_product_crud_index') }}">back to list</a>

    <a href="{{ path('app_product_crud_edit', {'uuid': product.uuid}) }}">edit</a>

    {{ include('product_crud/_delete_form.html.twig') }}
{% endblock %}

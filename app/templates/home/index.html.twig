{% extends 'base.html.twig' %}

{% block title %}Accueil{% endblock %}

{% block body %}

<section class="top-content">

    <h2>Nos meilleures ventes</h2>

<div class="slider-container">
    
    <div class="card-slider">
        {% for product in bestSells %}
            <div class="card">
                <img src="/media/images/product/{{ product.uuid }}/{{ product.image }}" alt="Image">
                <div class="card-content">
                    <div class="left">
                        <h4>{{ product.name }}</h4>
                        <p>{{ product.description }}</p>
                    </div>
                    <div class="right">
                        <p class="bottom-product-price">{{ product.price }} 💲</p>
                        <p>{{ product.nbVentes }} ventes </p>
                        <button>🛒</button>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
    

</div>

<div class="slider-nav">
    <button id="prevButton">←</button>
    <button id="nextButton">→</button>
</div>

</section>



<section class="bottom-content">

    <h2>La sélection du moment</h2>

<div class="category-container">
    <h4>Nos meilleurs produits par catégories</h4>
    <div class="bottom-product-cards">
        <div class="bottom-card">
            <img src="/media/images/home/slider/chaussure1-slider.jpg" alt="Produit 1">
            <h3>Produit 1</h3>
            <p class="bottom-product-price"> $20</p>
            <div class="bottom-buttons-card">
                <button>👀</button>
                <button>🛒</button>
            </div>
        </div>
        
</div>

</section>



<script src="{{ asset('js/home.js') }}"></script>
<link rel="stylesheet" href="{{ asset('css/home.css') }}">
{% endblock %}

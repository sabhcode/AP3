{% extends 'base.html.twig' %}

{% block title %}Accueil{% endblock %}

{% block body %}

<section class="top-content">

    <h2>Nos meilleures ventes</h2>

<div class="slider-container">
    
    <div class="card-slider">
        {% for product in bestSells %}
            <div class="card">
                <img src="/media/images/product/{{ product.getUuid() }}/{{ product.getImage() }}" alt="Image">
                <div class="card-content">
                    <div class="left">
                        <h4>{{ product.getName() }}</h4>
                        <p>{{ product.getDescription() }}</p>
                    </div>
                    <div class="right">
                        <p class="bottom-product-price">{{ product.getPrice() }} 💲</p>
                        <p>{{ product.getNbVentes() }} ventes </p>
                        <button>🛒</button>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
    

</div>

<div class="slider-nav">
    <button id="prevButton">←</button>
    <button id="nextButton">→</button>
</div>

</section>

{# ----------------------- section basse ---------------------------------- #}

<section class="bottom-content">

    <h2>La sélection du moment</h2>

<div class="category-container">
    <h4>Nos meilleurs produits par catégories</h4>
    <div class="bottom-product-cards">

        {% for product in BestProductByCategory %}
            {% if (product != null) %}
                <div class="bottom-card">
                    <img src="/media/images/product/{{ product.getUuid() }}/{{ product.getImage() }}" alt="Image">
                    <h3>{{ product.getName() }}</h3>
                    <p class="bottom-product-price">{{ product.getPrice() }} 💲</p>
                    <div class="bottom-buttons-card">
                        <button>👀</button>
                        <button>🛒</button>
                    </div>
                </div>
            {% endif  %}        
        {% endfor %}
</div>

</section>



<script src="{{ asset('js/home.js') }}"></script>
<link rel="stylesheet" href="{{ asset('css/home.css') }}">
{% endblock %}

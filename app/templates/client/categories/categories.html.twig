{% extends 'base.html.twig' %}

{% block title %}Catalogue{% endblock %}

{% block stylesheets %}
	<link rel="stylesheet" href="{{ asset('css/category.css') }}">
{% endblock %}

{% block header %}
    {% include 'client/headerLinks.html.twig' %}
{% endblock %}

{% block body %}
	<h1>Catalogue</h1>
	<div class="app_container app_padding">
		<!-- Barre de recherche -->
		<div class="search-bar">
			<input type="text" id="search-input" placeholder="Rechercher un produit">
			<select id="category-filter">
				<option class="select-category" value="">Toutes cat√©gories</option>
				<!-- Boucle pour afficher les options de cat√©gorie -->
				{% for category in categories %}
					<option value="{{ category.getName() }}">{{ category.getName() }}</option>
				{% endfor %}
			</select>
			<button id="search-button">üîç</button>
		</div>
		<div class="categories">
			<!-- Boucle pour afficher les cat√©gories -->
			{% for category in categories %}
				<div class="category">
					<a class="category-name" href="{{ path('app_client_category', {'slug': category.getSlug()}) }}">{{ category.getName()|upper }} üîó</a>
					<div class="product_cards">
						<!-- Boucle pour afficher les produits de chaque cat√©gorie -->
						{% for product in category.getProducts() %}
							{% include 'client/product_card.html.twig' with {'product': product} %}
						{% endfor %}
					</div>
				</div>
			{% endfor %}
		</div>
	</div>
{% endblock %}

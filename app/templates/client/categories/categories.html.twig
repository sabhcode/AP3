{% extends 'base.html.twig' %}

{% block title %}Catalogue{% endblock %}

{% block stylesheets %}
	<link rel="stylesheet" href="{{ asset('css/category.css') }}">
{% endblock %}

{% block header %}
    {% include 'client/headerLinks.html.twig' %}
{% endblock %}

{% block body %}
	<h1>Catalogue</h1>
	<div class="app_container app_padding">
		<!-- Barre de recherche -->
		<form method="GET" class="search-bar">
			<input type="text" name="p" value="{{ app.request.query.get('p') }}" placeholder="Rechercher un produit">
			<select name="c">
				<option class="select-category" value="0">Toutes cat√©gories</option>
				<!-- Boucle pour afficher toutes les cat√©gories disponibles -->
				{% for category in categories %}
					<option value="{{ category.getId() }}">{{ category.getName() }}</option>
				{% endfor %}
			</select>
			<button>üîç</button>
		</form>
		<div class="categories">
			<!-- Boucle pour afficher les cat√©gories -->
			{% for category in categories %}
				<div class="category">
					<a class="category-name" href="{{ path('app_client_category', {'slug': category.getSlug()}) }}" title="{{ category.getName() }}">{{ category.getName()|upper }} üîó</a>
					<div class="product_cards">
						<!-- Boucle pour afficher les produits de chaque cat√©gorie -->
						{% for product in category.getProducts() %}
							{% include 'client/product_card.html.twig' with {'product': product} %}
						{% endfor %}
					</div>
				</div>
			{% endfor %}
		</div>
	</div>
{% endblock %}

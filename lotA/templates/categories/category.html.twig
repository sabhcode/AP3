{% extends 'base.html.twig' %}

{% block title %}Détail de la catégorie {{ category.name }}{% endblock %}

{% block stylesheets %}
	<link rel="stylesheet" href="{{ asset('css/category.css') }}">
{% endblock %}

{% block body %}
	<h2>{{ category.name  }}</h2>
	<div class="search-bar">
		<input type="text" id="search-input" placeholder="Rechercher un produit" style="color:var(--primaryColor);">
		<button id="search-button">🔍</button>
	</div>
	<div class="cards-container">
		{% for product in category.getProducts() %}
			<div class="card">
				<img src="/media/images/product/{{ product.getUuid() }}/{{ product.getImage() }}" alt="Image">
				<h3>{{ product.getName() }}</h3>
				<p class="product-price">{{ product.getPrice() }}
					💲</p>
				<div class="buttons-card">
					<a href="{{ path('app_product', {'slug' : product.getSlug()}) }}">👀</a>
					<button class="update-product-cart" data-productuuid="{{ product.getUuid() }}" data-action="add">🛒</button>

				</div>
			</div>
		{% endfor %}
	</div>
{% endblock %}

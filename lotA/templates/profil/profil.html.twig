{% extends 'base.html.twig' %}

{% block title %}Mon Profil{% endblock %}

{% block stylesheets %}
	<link rel="stylesheet" href="{{ asset('css/profil.css') }}">
{% endblock %}

{% block body %}
	<h1>Mon profil</h1>
	{% if app.user %}
		<h3>Bonjour, {{ app.user.getName() }}{{ app.user.firstname}}</h3>
		<p>Votre email: {{ app.user.email}}</p>
		<p>Votre numéro de téléphone: {{ app.user.phone}}</p>
		<p>Votre adresse: {{ app.user.street}}, {{app.user.zipcode}} {{app.user.city}}</p>
	{% endif %}
{% endblock %}

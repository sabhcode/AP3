<header id="header-app" class="header-app">
	<div class="header-app__content">
		<div class="header-app__logo">
			<a href="{{ path('app_home') }}" title="All4Sport">
				<img src="{{ asset('media/images/header/logo.png') }}">
			</a>
		</div>
		<nav class="header-app__nav">
			<ul>
				<li>
					<a href="{{ path('app_home') }}" class="{{ app.request.getPathInfo() == path('app_home') ? 'on' : '' }}" title="Accueil">Accueil</a>
				</li>
				<li>
					<a href="{{ path('app_categories') }}" class="{{ app.request.getPathInfo() == path('app_categories') ? 'on' : '' }}" title="Catalogue">Catalogue</a>
				</li>
				{# Si l'utilisateur est connecté alors on affiche ceci #}
				{% if app.user %}
					<li>
						<a href="{{ path('app_profil') }}" class="{{ app.request.getPathInfo() == path('app_profil') ? 'on' : '' }}" title="Profil">Profil</a>
					</li>
					<li>
						<a href="{{ path('app_logout') }}" class="{{ app.request.getPathInfo() == path('app_logout') ? 'on' : '' }}" title="Déconnexion">Déconnexion</a>
					</li>
				{# Sinon ça #}
				{% else %}
					<li>
						<a href="{{ path('app_login') }}" class="{{ app.request.getPathInfo() == path('app_login') ? 'on' : '' }}" title="Connexion">Connexion</a>
					</li>
					<li>
						<a href="{{ path('app_register') }}" class="{{ app.request.getPathInfo() == path('app_register') ? 'on' : '' }}" title="Inscription">Inscription</a>
					</li>
				{% endif %}
				<li>
					<a href="{{ path('app_cart') }}" class="{{ app.request.getPathInfo() == path('app_cart') ? 'on' : '' }}" title="Mon panier">
						Mon panier
						<span id="nb-products-in-cart" class="nb-products-in-cart">{{ cart.getNbProducts() }}</span>
					</a>
				</li>
			</ul>
		</nav>
	</div>
</header>
